[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W
ignore = E203,E501,RST201,RST203,RST301,W503
max-line-length = 80
max-complexity = 10
docstring-convention = pep257
per-file-ignores = tests/*:S101
exclude =
    .venv,
    .git,
    __pycache__,
    scratch*,
    site-packages,
    build,
    dist,
    .nox,
    examples/*
